%h1
  = @category.category
  Items
  
%ul
  - @category.items.each do |item|
    %li
      = item.name
        %ul
          %li= link_to 'Show', item
          %li= link_to 'Edit', edit_item_path(item)
          %li= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }
    %li 
      = link_to 'New Item', new_category_item_path
